<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="ThemeOverlay.MyTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/colorBG</item>
        <item name="android:textColor">@color/colorText</item>
    </style>


    <style name="AppTheme1" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorBG</item>
        <item name="colorPrimaryDark">@color/colorBGDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBGDark</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>
